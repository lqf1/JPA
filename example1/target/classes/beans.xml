<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- services -->

    <bean id="helloService" class="com.example.service.HelloWorldService">
        <property name="name" value="world"/>
        <constructor-arg type="String" value="spring"></constructor-arg>
        <!-- additional collaborators and configuration for this bean go here -->
    </bean>

    <!-- more bean definitions for services go here -->
   <bean id="LifeBean" class="com.example.bean.LifeBean" init-method="init" destroy-method="destroy">
   
   </bean>
   
</beans>